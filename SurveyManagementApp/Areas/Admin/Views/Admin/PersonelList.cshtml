@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Project.ENTITIES.Concrete.Personel>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-dark table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Personnel</th>
        <th scope="col">Company</th>
        <th scope="col">Role</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    @{int c = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>@item.PersonelName</td>
            <td>
                @Html.TextBox("CurrentComp", item.CurrentComp, new {@class = "form-control", @readonly = "readonly"})
            </td>
            <td>
                @Html.TextBox("Role", item.Role, new {@class = "form-control", @readonly = "readonly"})
            </td>
            <td><a href="/Admin/DeletePersonel/@item.PersonelID" class="btn btn-danger">Delete</a></td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="5">
            @Html.PagedListPager(Model, page=>Url.Action("PersonelList",new {page}))
        </td>
    </tfoot>
</table>
    <a href="/Admin/CreatePersonel" class="btn btn-success">Create New Personnel</a>
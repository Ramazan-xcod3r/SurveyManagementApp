@using System.Web.Mvc.Html
@using Project.ENTITIES.Concrete
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h2>@ViewBag.personel.PersonelName Welcome to the platform !</h2>
<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Personel Info In Your Company</th>
    </tr>
    </thead>
    <tbody>
    @{ int c = 0; }
    @if (!(Model.Count > 0))
    {
        @Html.Label("CurrentComp", (string) ViewBag.per.CurrentComp, new {@class = "bg-danger"})
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @{ ++c; }
                    @c
                </th>
                <td>
                    @Html.TextBox("CurrentComp", item.CurrentComp, new {@class = "form-control", @readonly = "readonly"})
                </td>
                @* <td><a href="/Manager/UpdateCompany/@item.CompanyID" class="btn btn-warning">Update</a></td> *@

            </tr>
        }
    }
    </tbody>
</table>
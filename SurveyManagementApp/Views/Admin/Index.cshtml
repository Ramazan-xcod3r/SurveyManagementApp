@using Project.ENTITIES.Concrete
@model List<Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Company Name</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @{int c = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@c  @{c++;}</th>
                <td>@item.CompanyName</td>
                <td><a href="/Admin/DeleteCompany/@item.CompanyID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Admin/UpdateCompany/@item.CompanyID" class="btn btn-warning">Update</a></td>

            </tr>
        }
    </tbody>
</table>

<a href="/Admin/AddCompany" class="btn btn-primary">Create New Company</a>
